<form id="ethereum">
  <p><img src="/images/ethereum.png"></p>
      <div class="price-holder row">
          <div class="col-md-5">
              <%= text_input(:ethereum, :value, value: @ethereum[:value], class: "price-input text-center ") %>
          </div>
          <div class="col-md-2">
              =
          </div>
          <div class="col-md-5">
              <%= number_to_currency(@ethereum[:price], unit: "R$ ", separator: ",", delimiter: ".") %>
          </div>
      </div>
</form>
